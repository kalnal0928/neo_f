<!-- themes.xml 파일 내용 -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Neo_f" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Neo_f" parent="Base.Theme.Neo_f" />

    <!-- 기본 키보드 키 스타일 -->
    <style name="KeyboardKey" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@color/key_background_normal</item>
        <item name="android:textColor">@color/key_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 기능 키 스타일 (Space, Enter 등) -->
    <style name="KeyboardKey.Functional" parent="KeyboardKey">
        <item name="android:background">@color/key_functional_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 숫자 키 스타일 -->
    <style name="KeyboardKey.Number" parent="KeyboardKey">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/key_functional_background</item>
    </style>

</resources>
