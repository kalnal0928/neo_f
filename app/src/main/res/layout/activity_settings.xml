<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neo-F 키보드 설정"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="16dp"/>

        <!-- 음절 조합 타이머 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음절 조합 타이머"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="같은 음절로 인식할 최대 시간 간격을 설정합니다.\n예: ㄱ을 두 번 눌러 ㅋ으로 변환할 때의 시간 제한"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp"/>

        <!-- 타이머 값 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="현재 설정:"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/timer_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300 ms"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- 슬라이더 -->
        <SeekBar
            android:id="@+id/timer_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="900"
            android:progress="200"
            android:paddingBottom="16dp"/>

        <!-- 슬라이더 범위 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="빠름 (100ms)"
                android:textSize="12sp"
                android:textColor="#999999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="느림 (1000ms)"
                android:textSize="12sp"
                android:textColor="#999999"/>
        </LinearLayout>

        <!-- 프리셋 버튼들 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="빠른 설정"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/preset_fast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="빠름\n150ms"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/preset_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="보통\n300ms"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/preset_slow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="느림\n500ms"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- 글자 크기 설정 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="글자 크기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키보드 버튼의 글자 크기를 조절합니다."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp"/>

        <!-- 글자 크기 값 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="현재 크기:"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/text_size_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 sp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- 슬라이더 -->
        <SeekBar
            android:id="@+id/text_size_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:progress="8"
            android:paddingBottom="16dp"/>

        <!-- 슬라이더 범위 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="작게 (12sp)"
                android:textSize="12sp"
                android:textColor="#999999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="크게 (32sp)"
                android:textSize="12sp"
                android:textColor="#999999"/>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- 터치음 설정 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="터치음"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키를 누를 때 소리를 재생합니다."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="터치음 사용"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sound_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
        </LinearLayout>

        <!-- 테스트 영역 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="테스트"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아래 입력창에서 설정을 테스트해보세요."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="8dp"/>

        <EditText
            android:id="@+id/test_input"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:hint="여기서 타이머 설정을 테스트하세요"
            android:gravity="top"
            android:inputType="text"/>

        <!-- 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="기본값"
                android:backgroundTint="#FF9800"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="취소"
                android:backgroundTint="#757575"/>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="저장"
                android:backgroundTint="#4CAF50"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
